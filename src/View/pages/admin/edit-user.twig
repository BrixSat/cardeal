{% extends "template.twig" %}

{% block head %}
    <title>Edit user | {{ app_name }}</title>
    {{ parent() }}
{% endblock %}


{% block content %}

    <div class="main-content">
        <div class="row">
            <div class="col-12">
                <form class="card">
                    <h4 class="card-title"><strong>Conta de utilizador</strong></h4>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h5 class="text-light fw-400">Informações da conta de utilizador <label class="text-fader">#{{ user.id }}</label></h5>

                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label class="text-fader required">Primeiro nome</label>
                                        <input id="firstName" name="firstName"
                                                class="form-control required" type="text" value="{{ user.firstName }}" >
                                    </div>

                                    <div class="form-group col-md-6">
                                        <label class="text-fader required">Último nome</label>
                                        <input id="lastName" name="lastName"
                                                class="form-control required" type="text" value="{{ user.LastName }}" >
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label class="text-fader">Cargo</label>
                                        <input id="jobTitle" name="jobTitle"
                                                class="form-control" type="text" value="{{ user.jobTitle }}" >
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="text-fader required">Email</label>
                                    <input id="email" name="email"
                                            class="form-control required" type="email" value="{{ user.email }}">
                                </div>

                                <br>

                                <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
                                <input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

                                <button class="btn btn-block btn-primary" id="save-basic" disabled>Guardar alterações</button>

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <form class="card">
                    <h4 class="card-title"><strong>Mudar Password</strong></h4>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label class="text-fader required">Nova password</label>
                                    <input id="password" name="password"
                                            class="form-control required" type="password">
                                </div>

                                <div class="form-group">
                                    <label class="text-fader required">Confirmar nova password</label>
                                    <input id="password-conf" class="form-control required" type="password">
                                </div>

                                <br>

                                <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
                                <input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

                                <button class="btn btn-block btn-primary" id="save-password" disabled>Guardar alterações</button>

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    <script src="{{ base_path() }}/assets/js/admin/edit-user.min.js"></script>
{% endblock %}